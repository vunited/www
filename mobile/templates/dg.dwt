<!doctype html>
<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<meta name="format-detection" content="telephone=no" />
<title>{if $keywords}{$keywords}{else}{$titleh}{/if} - {$shop_name}</title>
<link rel="stylesheet" href="css/zyit.css" />
<link rel="stylesheet" href="css/style.css" />
<link rel="stylesheet" href="css/js.css" />
<link rel="stylesheet" href="fonts/font-awesome.min.css">
</head>

<body class="bg-c8">
{include file='heard.dwt'}
{include file='heardt.dwt'}
	<script language="javascript">
	function form_order(order){
		listform.sort.value = order;
		listform.order.value = "{if $pager.search.order == 'DESC'}ASC{else}DESC{/if}";
		listform.submit();
	}
	</script>
	<form action="dg.php" method="post" name="listform" style="display:none">
    <input type="hidden" name="page" value="{$pager.page}" />
    {foreach from=$pager.search key=key item=item}

      {if $key eq 'keywords'}
        <input type="hidden" name="{$key}" value="{$item|escape:decode_url}" />
      {else}
        <input type="hidden" name="{$key}" value="{$item}" />
      {/if}

    {/foreach}
  </form>
   <!----- content ------>
      <div class="ub ub-ver m-t4 ubt bc-border2">
         <div class="h4 bg-c8"></div>
         <!---- 选项卡 ----->
            <div class="ub ub-f1 ub-ver bg-c1 ubb bc-border2">
               <div class="ub ub-f1 fs04 h3">
                  <a href="dg.php" class="ub ub-f1 ub-ac ub-pc c14 tab tabbg">商品导购</a>
                  <a href="store.php" class="ub ub-f1 ub-ac ub-pc c14 tab">店铺导购</a>
               </div>
               <div class="ub ub-f1 h3 ub-ac p-t p-b">
                  <div class="ub ub-f1 fs04 p-l1">
                     <a href="javascript:;" onClick="form_order('goods_id')" class="btn1 btn2 {if $pager.search.sort == 'goods_id'}{if $pager.search.order == 'DESC'}btn2bg{/if}{/if}">最新商品</a>
                     <a href="javascript:;" onClick="form_order('salesnum')" class="btn1 btn2 {if $pager.search.sort == 'salesnum'}{if $pager.search.order == 'DESC'}btn2bg{/if}{/if}">销量排序</a>
                  </div>
                  <a href="javascript:click_a('shaixuan');" class="ub ub-ac" id="sx">
                     <div class="sx fs03 m-r4" >筛选</div>
                  </a>
                  
                  
             <div class="sxnav ub-ver ub-f1" id="shaixuan" style="display:none; margin-top:20px;">
                <div class="sxlist bg-c1"> 
                    
                    <div class="sx1">
                       <span class="sxtitle">品牌</span>
                       <ul class="fs03">                       
                       <!--{foreach from=$brand_list item=brand}-->
                       <!-- {if $brand.id eq $brands} -->
                       <li><a class="sx1bg">{$brand.name}</a></li>
                       <!-- {else} -->
                       <li><a href="dg.php?brand={$brand.id}">{$brand.name}</a></li>
                       <!-- {/if} -->
                       <!--{/foreach}-->
                       </ul>
                    </div>  
                    <div class="sx1">
                       <span class="sxtitle">分类</span>
                       <ul class="fs03">
                                 
                       <!--{foreach from=$pcat_array item=cat}-->
                       <!-- {if $cat.id eq $category} -->
                       <li><a class="sx1bg">{$cat.name|escape:html}</a></li>
                       <!-- {else} -->
                       <li><a href="dg.php?category={$cat.id}">{$cat.name|escape:html}</a></li>
                       <!-- {/if} -->
                       <!--{/foreach}-->
                       </ul>
                    </div>                  
                    
                </div>
             </div>
                  
                  
                  
                  
               </div>
            </div>
         <!---- 选项卡结束 ----->
         <!---- 商品列表 ----->
            <ul class="prolist1">
              {foreach from=$goods_data item=goods name=goods}
              <li class="m-t2">
                 <div class="ub ub-ver ub-f1 m-l m-r bg-c1 h0 re">
                    <a href="goods.php?id={$goods.goods_id}&u={$user_id}" class="img05"><img src="../{$goods.goods_thumb}" width="100%" height="100%" /></a>
                    <a href="goods.php?id={$goods.goods_id}&u={$user_id}" class="fs02 c3 p-l2">{$goods.goods_name|truncate:10}</a>
                    <span class="fs04 c6 p-l2 p-t3">{$goods.shop_price}</span>
                    <div class="ub img6">
                       <div class="ub ub-img1 img8"></div>
                       <div class="ub ub-img1 img7"></div>
                    </div>
                 </div>
              </li>
              {/foreach}
            </ul>
         <!---- 商品列表结束 ------>         
         <div class="ub ub-f1 ub-ac p-t2 p-b3">
                  {if $pagebar}
                  <div class="ub ub-f1 ubb bc-border3 m-r1"></div>
                  <div class="ub fs01 c7">{$pagebar}</div>
                  <div class="ub ub-f1 ubb bc-border3 m-l1"></div>
                  {/if}
         </div>         
      </div>
   <!----- content end ------>

        
{include file='foot.dwt'}
</body>
</html>