	<script type="text/javascript">
    region.isAdmin=true;
    </script>
    <script type="text/javascript">
    function doValidate() {		
		if(document.theForm.consignee.value==""){
			//alert("请输入收货人姓名!");theForm.consignee.focus();
			document.getElementById('light').style.display='block';
			document.getElementById('lightc').innerHTML = "请输入收货人姓名!";   
			return false;
		}
		if(document.theForm.tel.value==""){
			//alert("请输入收货人电话!");theForm.tel.focus();
			document.getElementById('light').style.display='block';
			document.getElementById('lightc').innerHTML = '请输入收货人电话!';      
			return false;
		}
		if(document.theForm.tel.value!=""){			
			var mobileReg = /^1[3|4|5|7|8]\d{9}$/; //手机号码不是合法号码
            if(!mobileReg.test(document.theForm.tel.value)) {
                //alert('请填写正确手机号码!!');
				//document.theForm.mobile.focus();
				document.getElementById('light').style.display='block';
				document.getElementById('lightc').innerHTML = '请填写正确手机号码!!';                
                return false;
            }		
		}		
		if(document.theForm.selDistricts.value == 0){
			//alert("请选择市");theForm.selCities.focus();
			document.getElementById('light').style.display='block';
			document.getElementById('lightc').innerHTML = "请选择区";   
			return false;
		}
		if(document.theForm.address.value==""){
			//alert("请输入您的详细地址!");theForm.address.focus();
			document.getElementById('light').style.display='block';
			document.getElementById('lightc').innerHTML = "请输入您的详细地址!";   
			return false;
		}
		
			

                return true;
    }
    </script>
</head>
<body class="bg-c8">
{include file='heard.dwt'}
{include file='heardt.dwt'}
<!--{if $fun == "list"}-->

   <!----- content ------>
      <div class="ub ub-ver m-t4 ubt bc-border2">
         <!--{foreach from=$consignee item=consignee name=con}-->
         <div class="h4 bg-c8"></div>
         <div class="ub ub-ver ub-f1">
             <div class="ub ub-f1 bg-c13 ubt bc-border2 h3 ub-ac">
                <div class="ub ub-f1 fs04 c9 m-l3">送货地址</div>
                <div class="ub ub-ac check ub-ac m-r">
                {if $consignee.address_ids eq 1}<div  class="ub fs04 c13">默认地址</div>{else}<a class="ub fs04 c13" href="user.php?act=act_moren_address&id={$consignee.address_id}">设为默认</a>{/if}&nbsp;<a class="ub fs04 c13" href="user.php?act=drop_address&id={$consignee.address_id}">删除</a>
                </div>
             </div>
             <div class="ub ub-f1 ub-ver h3 ubb ubt bc-border2 bg-c1">
                <div class="ub p-t p-b ub-ac">
                   <div class="ub ub-f1 ub-ver m-l3 ub-pc">
                     <div class="ub ub-ac">
                        <div class="fs03 c3 m-r3 ub ub-ac"><div class="ub ub-img icon13 m-r2"></div><div class="ub">{$consignee.consignee|escap}</div></div>
                        <div class="fs03 c3 ub ub-ac"><div class="ub fa fa-mobile c6 m-r2" style="font-size: 22px;"></div><div class="ub">{$consignee.tel|escape}</div></div>
                     </div>
                     <div class="ub c14 fs03 ub-ac p-t"><div class="ub fa fa-map-marker c6 m-r2" style="font-size: 18px;"></div><div class="ub"> {$consignee.address|escape}</div></div>
                   </div>
                   <a href="user.php?act=add_address&id={$consignee.address_id}" class="ub ub-ac c1 bg-c3 fs03 m-r gg">更改</a>
                </div>            
              </div>
            </div>
         <!--{/foreach}--> 
         <div class="ub ub-f1 ub-ac ub-pc m-t3">
