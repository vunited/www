<script>
function $(o){ //获取对象
 if(typeof(o) == "string")
 return document.getElementById(o);
 return o;
}

function changeAtt(t) {
t.lastChild.checked='checked';
for (var i = 0; i<t.parentNode.childNodes.length;i++) {
        if (t.parentNode.childNodes[i].className == 'fs03 sex sexbg') {
            t.parentNode.childNodes[i].className = 'fs03 sex';
        }
    }
t.className = "fs03 sex sexbg";
}

function Selectfw(a) {
a=a.split(",");
$("fwfl").innerHTML = a[0];
$("fw1").value = a[0];
$("price1").value = a[1];
$("price").innerHTML = Number($("price1").value)+Number($("price2").value);
$("prices").innerHTML = Number($("price1").value)+Number($("price2").value);
}
function Selectdj(a) {
a=a.split(",");
$("fwdj").innerHTML = a[0];
$("fw2").value = a[0];
$("price2").value = a[1];
$("price").innerHTML = Number($("price1").value)+Number($("price2").value);
$("prices").innerHTML = Number($("price1").value)+Number($("price2").value);
}

function setImagePreview(a) {
var docObj=document.getElementById("pic"+a); 
var imgObjPreview=document.getElementById("preview"+a);
if(docObj.files &&docObj.files[0])
{
//火狐下，直接设img属性
imgObjPreview.style.display = 'block';
imgObjPreview.style.width = '60px';
imgObjPreview.style.height = '60px'; 
//imgObjPreview.src = docObj.files[0].getAsDataURL();
 
//火狐7以上版本不能用上面的getAsDataURL()方式获取，需要一下方式
imgObjPreview.src = window.URL.createObjectURL(docObj.files[0]);
}
else
{
//IE下，使用滤镜
docObj.select();
var imgSrc = document.selection.createRange().text;
var localImagId = document.getElementById("localImag"+a);
//必须设置初始大小
localImagId.style.width = "60px";
localImagId.style.height = "60px";
//图片异常的捕捉，防止用户修改后缀来伪造图片
try{
localImagId.style.filter="progid:DXImageTransform.Microsoft.AlphaImageLoader(sizingMethod=scale)";
localImagId.filters.item("DXImageTransform.Microsoft.AlphaImageLoader").src = imgSrc;
}
catch(e)
{
alert("您上传的图片格式不正确，请重新选择!");
return false;
}
imgObjPreview.style.display = 'none';
document.selection.empty();
}
return true;
}
 




function check(theForm){
		if(theForm.name.value == ""){
			document.getElementById('light').style.display='block';
            document.getElementById('lightc').innerHTML = "姓名不可为空!"; 
			return false;
		}
		if(theForm.tel.value == ""){
			document.getElementById('light').style.display='block';
            document.getElementById('lightc').innerHTML = "联系电话不可为空!"; 
			return false;
		}
		reg = /^1[3|4|5|7|8]\d{9}$/; //手机号码不是合法号码
		if (reg.test(theForm.tel.value)){
			//return true;
		}else{
			document.getElementById('light').style.display='block';
            document.getElementById('lightc').innerHTML = "请输入正确手机号!"; 
			return false;
		};
		if(theForm.fwfl_id.value == ""){
			document.getElementById('light').style.display='block';
            document.getElementById('lightc').innerHTML = "请选择服务!"; 
			return false;
		}
		if(theForm.fwdj_id.value == ""){
			document.getElementById('light').style.display='block';
            document.getElementById('lightc').innerHTML = "请选择灯具类型!"; 
			return false;
		}
		if( parseInt(theForm.fw_time4.value) > parseInt(theForm.fw_time5.value)){
			document.getElementById('light').style.display='block';
            document.getElementById('lightc').innerHTML = "到店时间错误!"; 
			return false;
		}
		
		
var flag = false;		
var allRadio = theForm.elements["payment"];
for(var i = 0;i < allRadio.length;i++){
   if(allRadio[i].checked){flag = true;}
}
if (!flag){
 document.getElementById('light').style.display='block';
 document.getElementById('lightc').innerHTML = "请选择支付方式!"; 
 return false;
}
		
		
		
		//theform.submit();
		document.getElementById("forms").submit();
	}

  </script>
