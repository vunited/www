<form action="{$action}" method="post" name="theForm" id="theForm" onsubmit="return doValidate()">
   <!----- content ------>
      <div class="ub ub-ver m-t4 ubt bc-border2">
         <div class="h4 bg-c8"></div>
         <div class="ub ub-f1 ub-ver bg-c1 ubt ubb bc-border2 p-l3 p-r3 p-t1" style="padding-bottom: 42px;">
            <div class="ub ub-f1 h3 ub-ac">
               <div class="ub ub-img1 icon24"></div>
               <div class="fs04 c14 m-l4">收货人&emsp;</div>
               <div class="ub ub-f1">
                  <div class="ub ub-f1 ub-ac text1">
                     <input name="consignee" type="text" class="ub ub-f1 h0" id="consignee" value="{$consignee.consignee|escape}"/>
                  </div> 
               </div>
            </div>
            <div class="ub ub-f1 h3 ub-ac">
               <div class="ub ub-img1 icon25"></div>
               <div class="fs04 c14 m-l4">手机号&emsp;</div>
               <div class="ub ub-f1">
                  <div class="ub ub-f1 ub-ac text1">
                     <input name="tel" type="text" class="ub ub-f1 h0" id="tel" value="{$consignee.tel|escape}"/>
                  </div> 
               </div>
            </div>
            <div class="ub ub-f1 h3 ub-ac">
               <div class="ub ub-img1 icon26"></div>
               <div class="fs04 c14 m-l4">地&emsp;址&emsp;</div>
               <div class="ub ub-f1 ub-ac">
                  
          <input type="hidden" name="country" value="1">
          
          
          <div class="ub ub-ac text1  m-r">
          <select name="province" id="selProvinces" onchange="region.changed(this, 2, 'selCities')" style="width:70px;">
            <option value="0">请选择省</option>
            <!-- {foreach from=$province_list item=province} -->
            <option value="{$province.region_id}" {if $consignee.province == $province.region_id}selected="selected"{/if}>{$province.region_name}</option>
            <!-- {/foreach} -->
          </select>
          </div><div class="ub ub-ac text1  m-r">
          <select name="city" id="selCities" onchange="region.changed(this, 3, 'selDistricts')" style="width:70px;">
            <option value="0">请选择市</option>
            <!-- {foreach from=$city_list item=city} -->
            <option value="{$city.region_id}" {if $consignee.city == $city.region_id}selected="selected"{/if}>{$city.region_name}</option>
            <!-- {/foreach} -->
          </select>
          </div><div class="ub ub-ac text1  m-r">
          <select name="district" id="selDistricts" style="width:70px;">
            <option value="0">请选择区</option>
            <!-- {foreach from=$district_list item=district} -->
            <option value="{$district.region_id}" {if $consignee.district == $district.region_id}selected="selected"{/if}>{$district.region_name}</option>
            <!-- {/foreach} -->
          </select>
          </div>
          
                  
               </div>
            </div>
            <div class="ub ub-f1 h3 ub-ac">
                  <div class="ub ub-f1 ub-ac text1" style="margin-left: 80px;">
                     <input name="address" type="text" class="ub ub-f1 h0" id="address" value="{$consignee.address|escape}"/>
                  </div>  
           </div>
            </div>
         </div>
      </div>
   <!----- content end ------>
      <div class="clear"></div>
   <!----- 保存 ------>
      <div class="ub ub-f1 ub-ver js" style="bottom: 34px;">
