{if $defaddress && $isinput neq 1}
<script type="text/javascript">
		function submit(obj){
			obj.submit();
		}
		function check(theForm){
			var paymentSelected = false;
			for (i = 0; i < theForm.elements.length; i ++ ){
				if (theForm.elements[i].name == 'address_id' && theForm.elements[i].checked){
					paymentSelected = true;
				}
			}
			var flow_no_payment = "必须选定一个收获地址！";
			if ( ! paymentSelected){
				//alert(flow_no_payment);
				document.getElementById('light').style.display='block';
				document.getElementById('lightc').innerHTML = flow_no_payment;   
				return false;
			}
			theform.submit();
		}
	</script>
{else}
{insert_scripts files="../js/utils.js,../js/transport.js"}
{insert_scripts files="../js/region.js"}
<script type="text/javascript">
	region.isAdmin=true;
	function submit(obj){
		obj.submit();
	}
	function check(theForm){
		if(theForm.consignee.value==""){
			//alert("请输入收货人姓名!");theForm.consignee.focus();
			document.getElementById('light').style.display='block';
			document.getElementById('lightc').innerHTML = "请输入收货人姓名!";   
			return false;
		}
		if(theForm.tel.value==""){
			//alert("请输入收货人电话!");theForm.tel.focus();
			document.getElementById('light').style.display='block';
			document.getElementById('lightc').innerHTML = "请输入收货人电话!";   
			return false;
		}
		if(document.theForm.tel.value!=""){			
			var mobileReg = /^1[3|4|5|7|8]\d{9}$/; //手机号码不是合法号码
            if(!mobileReg.test(document.theForm.tel.value)) {
                //alert('请填写正确手机号码!!');
				//document.theForm.mobile.focus();
				document.getElementById('light').style.display='block';
				document.getElementById('lightc').innerHTML = '请填写正确手机号码!';                
                return false;
            }		
		}		
		if(document.theForm.selDistricts.value == 0){
			//alert("请选择市");theForm.selCities.focus();
			document.getElementById('light').style.display='block';
			document.getElementById('lightc').innerHTML = "请选择区";   
			return false;
		}
		if(document.theForm.address.value==""){
			//alert("请输入您的详细地址!");theForm.address.focus();
			document.getElementById('light').style.display='block';
			document.getElementById('lightc').innerHTML = "请输入您的详细地址!";   
			return false;
		}

		theform.submit();
	}
</script>
{/if}
</head>
