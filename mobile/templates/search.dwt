<!doctype html>
<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
<meta name="format-detection" content="telephone=no" />
<title>{if $keywords}{$keywords}{else}{$titleh}{/if} - {$shop_name}</title>
<link rel="stylesheet" href="css/zyit.css" />
<link rel="stylesheet" href="css/style.css" />
<link rel="stylesheet" href="css/js.css" />
<link rel="stylesheet" href="fonts/font-awesome.min.css">
</head>

<body class="bg-c8">
{include file='heard.dwt'}
{include file='heardt.dwt'}


   <!----- content ------>
      <form name="searchForm" id="forms" method="get" action="search.php">
      <div class="m-t4">
         <div class="ub ub-f1 bg-c10 p-l3 p-r3 p-t p-b">
           <div class="ub ub-f1 h3 ub-ac bg-c1 sear1">
             <div class="fa fa-search m-l m-r c8 ub"></div>
             <input type="text" name="keywords"value="{$keywords}" placeholder="搜索商品关键字" class="ub ub-f1 h3 fs04"/>
             <span class="ub btn3 c1 h3 p-l2 p-r2" style="line-height:35px;" onClick="test()"/>搜索</span>
           </div>  
         </div>
         {if !$keywords and !$intro}
         {if $searchkeywords}
         <div class="fs04 tags">
            {foreach from=$searchkeywords item=val}
            <a href="search.php?keywords={$val|escape:url}" class="c1">{$val}</a>
            {/foreach}
         </div>
         {/if}
         {/if}
      </div>
      </form>
   <!----- content end ------>

{if $keywords or $intro}

<!-- 排序begin -->
	<script language="javascript">
	function form_order(order){
		listform.sort.value = order;
		listform.order.value = "{if $pager.search.order == 'DESC'}ASC{else}DESC{/if}";
		listform.submit();
	}
function test()
{
    document.getElementById("forms").submit();
}
	</script>
	<form action="search.php" method="post" name="listform" style="display:none">
    <input type="hidden" name="page" value="{$pager.page}" />
    {foreach from=$pager.search key=key item=item}

      {if $key eq 'keywords'}
        <input type="hidden" name="{$key}" value="{$item|escape:decode_url}" />
      {else}
        <input type="hidden" name="{$key}" value="{$item}" />
      {/if}

    {/foreach}
  </form>

   <!----- content ------>
      <div class="ub ub-ver ubt bc-border2">
         <div class="h4 bg-c8"></div>
         <!---- 商品列表 ----->
            <ul class="prolist1">
              {foreach from=$goods_data item=goods name=goods}
              <li class="m-t2">
                 <div class="ub ub-ver ub-f1 m-l m-r bg-c1 h0 re">
                    <a href="goods.php?id={$goods.goods_id}&u={$user_id}" class="img05"><img src="{if strpos($goods.goods_thumb,'ttp')>0}{else}../{/if}{$goods.goods_thumb}" width="100%" height="100%" /></a>
                    <a href="goods.php?id={$goods.goods_id}&u={$user_id}" class="fs02 c3 p-l2">{$goods.goods_name|truncate:9}</a>
                    <span class="fs04 c6 p-l2 p-t3">{$goods.shop_price}</span>
                    <div class="ub img6">
                       {if $goods.brand_id}<div class="ub ub-img1 img8"></div>{/if}
                       {if $goods.is_new}<div class="ub ub-img1 img7"></div>{/if}
                    </div>
                 </div>
              </li>
              {/foreach}
            </ul>
         <!---- 商品列表结束 ------>
         
         <div class="ub ub-f1 ub-ac p-t2 p-b3">         
                  {if $pagebar}
                  <div class="ub ub-f1 ubb bc-border3 m-r1"></div>
                  <div class="ub fs01 c7">{$pagebar}</div>
                  <div class="ub ub-f1 ubb bc-border3 m-l1"></div>
                  {/if}
         </div>         
         <div class="ub ub-f1">
            {foreach from=get_advlist_position_name('内页广告_wap',0,1) item=ad}
            <a href="{$ad.url}"><img width="100%" src="{$ad.image}"/></a>
            {/foreach}
         </div>      
      </div>
   <!----- content end ------>
{/if}

        
{include file='foot.dwt'}
</body>
</html>